#include <iostream>
#include <cstdlib>
using namespace std;

int main()
{
    // Del 1, Lagra boknummer och födelseår.

    double born;
    double bok;
    double length;

    cout << "Denna informationen kommer lagras" << endl;
    cout<< " " << endl;
    cout << "Vilket \x86r \x84r du f\x94dd: " ;
    cin >> born;



    cout << "Vilket nummer har din bok?: " ;
    cin >> bok;

    system("CLS");

    // Del 2, Skiva ut namn och vilket år du är född på samma rad.

    cout <<"Du heter " << "Joakim Hinder" << " " << "och \x84r f\x94\dd " << born << endl;



    // Del 3, Textrad med boknummer

    cout << "Du har bok nummer: " << bok << endl;

    cout<< " " << endl;

    cout << "Tryck p\x86 valfri tagent f\x94r att forts\x84tta" << endl;

    system("pause>nul");
    system("CLS");

    // Del 4, Läng i m, omvandla till cm.

    cout << "Skriv in din l\x84ngd i m: ";
    cin >> length;
    cout << "Du \x84r: " << length * 100 << "cm" << endl;
    cout<< " " << endl;

    // Del 5, Skriv ut differansen mellan numret på din lärobok och när du är född.

    cout << "Differansen mellan ditt boknummer och ditt f\x94delse\x86r: " << bok - born << endl;

    return 0;
}
